<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="2" author="user">
        <createTable tableName="candidatos">
            <column name="id" type="UUID">
                <constraints primaryKey="true"/>
            </column>
            <column name="nome" type="VARCHAR(255)"/>
            <column name="numero" type="INT"/>
            <column name="legenda" type="VARCHAR(255)"/>
            <column name="id_cargo" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="criado_em" type="TIMESTAMP"/>
            <column name="alterado_em" type="TIMESTAMP"/>
            <column name="deletado_em" type="TIMESTAMP"/>
        </createTable>

        <addUniqueConstraint
                tableName="candidatos"
                columnNames="numero"
                constraintName="unique_numero_candidatos" />

        <addForeignKeyConstraint baseTableName="candidatos"
                                 baseColumnNames="id_cargo"
                                 constraintName="fk_candidatos_cargo"
                                 referencedTableName="cargos"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>
